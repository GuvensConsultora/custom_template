<!-- sale_order_report_templates.xml -->

<odoo>
  <template id="report_saleorder_document_custom" inherit_id="sale.report_saleorder_document">
    <!-- Reemplazamos el bloque completo de direcciones -->
    <xpath expr="//t[@t-set='address']" position="replace"/>
 
    <xpath expr="//div[@class='page']" position="replace">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <div class="page">

            <!-- ENCABEZADO CLIENTE -->
            <div class="row mb-2">
              <div class="col-6">
		<h4><t t-esc="doc.partner_id.name"/></h4>
		<t t-if="doc.partner_id.street">
		  <strong>Dirección:</strong> <t t-esc="doc.partner_id.street"/>
		  <t t-if="doc.partner_id.street2">, <t t-esc="doc.partner_id.street2"/></t>
		  </t><br/>

		  <t t-if="doc.partner_id.city or doc.partner_id.state_id">
		    <t t-if="doc.partner_id.city"><t t-esc="doc.partner_id.city"/></t>
		    <t t-if="doc.partner_id.state_id"> - <t t-esc="doc.partner_id.state_id.name"/></t>
		  </t>
		  <t t-if="doc.partner_id.country_id">
		    <t t-esc="doc.partner_id.country_id.name"/>
		  </t>
		  <t t-if="doc.partner_id.zip">
		    <t t-esc="doc.partner_id.zip"/>
		  </t>
		  <br/>

		  <t t-if="doc.partner_id.phone">
		    <strong>Teléfono:</strong> <t t-esc="doc.partner_id.phone"/>
		    </t><br/>

		    <t t-if="doc.partner_id.email">
		      <strong>Email:</strong> <t t-esc="doc.partner_id.email"/>
		      </t><br/>

		      <t t-if="doc.partner_id.vat">
			<strong>
			  <t t-if="doc.partner_id.country_id.vat_label">
			    <t t-esc="doc.partner_id.country_id.vat_label"/>
			  </t>
			  <t t-else="">Identificación</t>:
			</strong>
			<t t-esc="doc.partner_id.vat"/>
			</t><br/><br/>
	      </div>
	      
	      <!-- COLUMNA DERECHA -->

	      <div class="col-6 text-end border-start  ps-3 ">
		<h3 style="text-align: center; border:none;">Cotización: <t t-esc="o.name"/></h3>
	      </div>
	    </div>
            <div style="border: 1px solid black; border-radius: 10px; overflow: hidden; padding: 0; margin-bottom: 10px;">

 	      <table class="table  border-collapse: collapse;">
		<tr style="width: 100%; border: none;">
		  
		  <th style="text-align: center; border:none;">Fecha de cotización:</th>
		  <th style="text-align: center; border:none;">Vencimiento:</th>
		  <th style="text-align: center; border:none;">Vendedor:</th>

		</tr>
		<tr>
		  <td style="text-align: center; border:none;"><t t-esc="o.date_order.strftime('%d/%m/%Y')"/></td>
		  <td style="text-align: center; border:none;">
		    <t t-if="o.validity_date">
		      <t t-esc="o.validity_date.strftime('%d/%m/%Y')"/>
		    </t>
		    <t t-if="not o.validity_date">
		      <t t-esc="o.date_order.strftime('%d/%m/%Y')"/>
		    </t>
		  </td>
		  <td style="text-align: center; border:none;"><t t-esc="o.user_id.name"/></td>
		</tr>
	      </table>
            </div>
	    <div class="oe_structure"/>
	    
            <div style="border: 1px solid black; border-radius: 10px; overflow: hidden; padding: 0; margin-bottom: 10px;">
	    <t t-set="lines_to_report" t-value="o._get_order_lines_to_report()"/>
            <t t-set="display_discount" t-value="any(l.discount for l in lines_to_report)"/>
            <table class="table  border-collapse: collapse; ">
              <!-- In case we want to repeat the header, remove "display: table-row-group" -->
              <thead style="display: table-row-group">
                <tr>
                  <th name="th_description" class="text-start">Detalle</th>
                  <th name="th_quantity" class="text-end">Cant.</th>
                  <th name="th_priceunit" class="text-end">Precio</th>
                  <th name="th_discount" t-if="display_discount" class="text-end">
                    <span>% Desc.</span>
                  </th>
                  <th name="th_subtotal" class="text-end">
                    <span>Total</span>
                  </th>
		  <th name="th_taxes" class="text-end">Impuestos</th>
                </tr>
              </thead>
              <tbody class="sale_tbody">

                <t t-set="current_subtotal" t-value="0"/>

                <t t-foreach="lines_to_report" t-as="line">

                  <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>

                  <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                    <t t-if="not line.display_type">
                      <td name="td_name"><span t-field="line.name">Bacon Burger</span></td>
                      <td name="td_quantity" class="text-end">
                        <span t-field="line.product_uom_qty">3</span>
                        <!--<span t-field="line.product_uom">units</span>-->
                        <span t-if="line.product_packaging_id">
                          (<span t-field="line.product_packaging_qty" t-options="{&quot;widget&quot;: &quot;integer&quot;}"/> <span t-field="line.product_packaging_id"/>)
                        </span>
                      </td>
                      <td name="td_priceunit" class="text-end">
                        <span t-field="line.price_unit">3</span>
                      </td>
                      <td t-if="display_discount" class="text-end">
                        <span t-field="line.discount">-</span>
                      </td>
                      <td t-if="not line.is_downpayment" name="td_subtotal" class="text-end o_price_total">
                        <span t-field="line.price_subtotal">27.00</span>
                      </td>
		      <t t-set="taxes" t-value="', '.join([(tax.invoice_label or tax.name) for tax in line.tax_id])"/>
                      <td name="td_taxes" t-attf-class="text-end {{ 'text-nowrap' if len(taxes) &lt; 10 else '' }}">
                        <span t-out="taxes">Tax 15%</span>
                      </td>
                    </t>
                    <t t-elif="line.display_type == 'line_section'">
                      <td name="td_section_line" colspan="99">
                        <span t-field="line.name">A section title</span>
                      </td>
                      <t t-set="current_section" t-value="line"/>
                      <t t-set="current_subtotal" t-value="0"/>
                    </t>
                    <t t-elif="line.display_type == 'line_note'">
                      <td name="td_note_line" colspan="99">
                        <span t-field="line.name">A note, whose content usually applies to the section or product above.</span>
                      </td>
                    </t>
                  </tr>
                  <t t-if="current_section and (line_last or lines_to_report[line_index+1].display_type == 'line_section') and not line.is_downpayment">
                    <tr class="is-subtotal text-end">
                      <td name="td_section_subtotal" colspan="99">
                        <strong class="mr16">Subtotal</strong>
                        <span t-out="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}">31.05</span>
                      </td>

                    </tr>
                  </t>
                </t>
              </tbody>
            </table>
	    </div>
            <div class="clearfix" name="so_total_summary">
              <div id="total" class="row" name="total">
                <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                  <table class="table table-sm table-borderless">
                    <!-- Tax totals -->
                    <t t-set="tax_totals" t-value="doc.tax_totals"/>
                    <t t-call="sale.document_tax_totals"/>
                  </table>
                </div>
              </div>
            </div>
            <div class="oe_structure"/>
	  </div>
       </t>
      </t>
    </xpath>
  </template>
</odoo>
